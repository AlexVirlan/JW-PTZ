<Window x:Class="JWPTZ.Windows.WinSettings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:JWPTZ.Windows"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:utils="clr-namespace:JWPTZ.Utilities"
    mc:Ignorable="d"
    Title="JW PTZ - Settings" Height="450" Width="600" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" ShowInTaskbar="False">
    <Window.Resources>
        <utils:SettingsNotifier x:Key="SettingsNotifier"/>
    </Window.Resources>
    <Grid Background="#FF1A1A1A">
        <!--<Label Content="Coming soon... :)" HorizontalAlignment="Center" VerticalAlignment="Center" Height="64" Width="230" Foreground="#E5000000" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="26" FontWeight="Bold"/>-->

        <TabControl BorderThickness="1,1,1,1" BorderBrush="#FFACACAC" Margin="6">

            <TabItem x:Name="tabCameras" Header="Cameras">
                <Border BorderBrush="#FF404040" BorderThickness="1,1,1,1">
                    <Grid x:Name="grdCamsRoot">
                        <!--<StackPanel Orientation="Horizontal" Margin="6">
                            <Grid>
                                <StackPanel Orientation="Vertical">
                                    <Label Content="Camera List:" Foreground="White" FontWeight="Bold"/>
                                    <ListBox x:Name="lstCameras" Width="260" Background="#FF2D2D2D" Foreground="White" BorderBrush="#FF606060" BorderThickness="1"/>
                                </StackPanel>
                            </Grid>

                            <Grid>

                            </Grid>
                        </StackPanel>-->

                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Row="0" Grid.Column="0" Margin="6,0,6,0">
                            <StackPanel Orientation="Vertical">
                                <Label Content="Camera List:" Foreground="White" FontWeight="Bold"/>
                                <ListBox x:Name="lstCameras" Background="#FF2D2D2D" Foreground="White" BorderBrush="#FF606060" BorderThickness="1" Height="150"
                                         ItemsSource="{Binding Cameras, Source={StaticResource SettingsNotifier}}" SelectedIndex="0">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock>
                                                <TextBlock.Text>
                                                    <MultiBinding StringFormat="{}{0} - {1}">
                                                        <Binding Path="Id"/>
                                                        <Binding Path="Name"/>
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </StackPanel>
                        </Grid>

                        <Grid Grid.Row="0" Grid.Column="1" Margin="6,0,6,0">
                            <StackPanel Orientation="Vertical">
                                <Label Content="Add New Camera:" Foreground="White" FontWeight="Bold"/>
                                <TextBox x:Name="txtNewCamera" Width="Auto" Height="26" Background="#FF2D2D2D" Foreground="White" BorderBrush="#FF606060" BorderThickness="1" Margin="0,0,0,6" />
                            </StackPanel>
                        </Grid>

                    </Grid>
                </Border>
            </TabItem>

            <TabItem x:Name="tabApp" Header="App">
                <Border BorderBrush="#FF404040" BorderThickness="1,1,1,1">
                    <Grid x:Name="grdAsd2">

                    </Grid>
                </Border>
            </TabItem>

        </TabControl>

    </Grid>
</Window>