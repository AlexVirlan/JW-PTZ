            <Button x:Name="btnPanRightTiltUp" Grid.Row="0" Grid.Column="2" Style="{StaticResource ImageButtonStyle}" Margin="5" PreviewMouseDown="PTZFControl_PreviewMouseDownUp" PreviewMouseUp="PTZFControl_PreviewMouseDownUp">
