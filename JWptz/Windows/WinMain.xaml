                    <ImageBrush ImageSource="/Resources/Images/zoom-out-white.png" Stretch="Uniform" Viewport="0.1,0.1,0.8,0.8" Opacity="0.64"/>
                </Button.Background>
            </Button>
        </Grid>

    </Grid>

</Window>