            </Button>
            <Button x:Name="btnPanRight" Grid.Row="1" Grid.Column="2" Style="{StaticResource ImageButtonStyle}" Margin="5" PreviewMouseDown="PTZFControl_PreviewMouseDownUp" PreviewMouseUp="PTZFControl_PreviewMouseDownUp">
