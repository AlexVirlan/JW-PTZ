                </Button.Background>
            </Button>
            <Button x:Name="btnTiltDown" Grid.Row="2" Grid.Column="1" Style="{StaticResource ImageButtonStyle}" Margin="5" PreviewMouseDown="PTZFControl_PreviewMouseDownUp" PreviewMouseUp="PTZFControl_PreviewMouseDownUp">
