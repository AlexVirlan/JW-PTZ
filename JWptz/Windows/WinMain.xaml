            <Button x:Name="btnFocusIn" Grid.Row="0" Grid.Column="0" Style="{StaticResource ImageButtonStyle}" Margin="5" PreviewMouseDown="PTZFControl_PreviewMouseDownUp" PreviewMouseUp="PTZFControl_PreviewMouseDownUp">
